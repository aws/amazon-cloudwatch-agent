{
	"agent": {
		"run_as_user": "root"
	},

	"metrics": {
		"namespace": "MetricLogsTest",
		"append_dimensions": {
			"InstanceId": "${aws:InstanceId}"
		},
		"metrics_collected": {
			"mem": {
				"measurement": [
					"mem_used_percent"
				],
				"metrics_collection_interval": 60
			}
		}
	},
	"logs": {
		"logs_collected": {
			"files": {
				"collect_list": [
					{
						"file_path": "/tmp/test.log",
						"log_group_name": "{instance_id}",
						"log_stream_name": "{instance_id}",
						"timezone": "UTC"
					}
				]
			}
		}
	}
}
